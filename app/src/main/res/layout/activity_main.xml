<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textAllCaps="true"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="74dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAllCaps="true"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                tools:layout_editor_absoluteX="261dp"
                tools:layout_editor_absoluteY="74dp" />
            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3 points"
                android:onClick="incrementBy3"
                android:backgroundTint="@color/orange"
                android:layout_marginBottom="16dp"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="244dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2 points"
                android:onClick="incrementBy2"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/orange"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="315dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:onClick="incrementBy1"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/orange"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="401dp" />
            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="reset"
                android:text="Reset"
                android:backgroundTint="@color/orange"
                android:layout_marginLeft="140dp"
                tools:layout_editor_absoluteX="118dp"
                tools:layout_editor_absoluteY="608dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textAllCaps="true"
                android:textSize="22sp"

                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                tools:layout_editor_absoluteX="62dp"
                tools:layout_editor_absoluteY="145dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAllCaps="true"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                tools:layout_editor_absoluteX="264dp"
                tools:layout_editor_absoluteY="148dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3 points"
                android:onClick="incrementBy3B"
                android:layout_marginBottom="16dp"
                tools:layout_editor_absoluteX="237dp"
                android:backgroundTint="@color/orange"
                tools:layout_editor_absoluteY="244dp" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2 points"
                android:backgroundTint="@color/orange"
                android:onClick="incrementBy2B"
                android:layout_marginBottom="16dp"
                tools:layout_editor_absoluteX="237dp"
                tools:layout_editor_absoluteY="315dp" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:onClick="incrementBy1B"
                android:layout_height="wrap_content"
                android:text="Free Throw"
                android:backgroundTint="@color/orange"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                tools:layout_editor_absoluteX="227dp"
                tools:layout_editor_absoluteY="401dp" />
        </LinearLayout>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>